<h1 class="text-3xl font-bold mb-8 text-center"><%= @property.name %></h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
  <% @property.photos.each do |photo| %>
    <div class="relative overflow-hidden rounded-2xl shadow-lg transform transition duration-300 hover:scale-105 hover:shadow-2xl group">
      <% if photo.image.attached? %>
        <%= image_tag photo.image, class: "w-full h-56 object-cover transition-transform duration-300 group-hover:scale-110" %>
      <% else %>
        <div class="w-full h-56 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-400 text-sm">No image</span>
        </div>
      <% end %>

      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
    </div>
  <% end %>
</div>

<div class="text-center mt-8">
  <%= link_to "Back to list", properties_path, class: "bg-blue-500 text-white px-4 py-2 rounded-full shadow hover:bg-blue-600 transition" %>
</div>
