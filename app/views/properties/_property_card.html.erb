<div class="bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-1">
  <!-- Carrossel -->
  <div data-controller="carousel" class="relative h-64 group overflow-hidden rounded-t-3xl">
    <% if property.photos.any? %>
      <% cover_index = property.photos.size >= 3 ? 2 : 0 %>
      <% property.photos.each_with_index do |photo, i| %>
        <%= image_tag url_for(photo.image),
            class: "absolute inset-0 w-full h-full object-cover transition-opacity duration-700 ease-in-out transform group-hover:scale-105",
            data: { carousel_target: "image", index: i } %>
      <% end %>

      <!-- Controles de navegação -->
      <button type="button" data-action="click->carousel#prev"
              class="absolute top-1/2 left-2 -translate-y-1/2 bg-white/70 rounded-full px-2 py-1 opacity-0 group-hover:opacity-100 transition">
        ‹
      </button>
      <button type="button" data-action="click->carousel#next"
              class="absolute top-1/2 right-2 -translate-y-1/2 bg-white/70 rounded-full px-2 py-1 opacity-0 group-hover:opacity-100 transition">
        ›
      </button>

      <!-- Indicadores -->
      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2">
        <% property.photos.each_with_index do |_, i| %>
          <span data-carousel-target="indicator"
                class="w-3 h-3 rounded-full bg-gray-300 transition-all duration-300"></span>
        <% end %>
      </div>
    <% else %>
      <div class="flex items-center justify-center h-64 bg-gray-200 text-gray-500">
        Sem fotos
      </div>
    <% end %>

    <!-- Overlay com nome -->
    <div class="absolute bottom-0 left-0 w-full bg-black/40 backdrop-blur-sm p-4">
      <h2 class="text-white text-xl font-bold drop-shadow-lg"><%= property.name %></h2>
    </div>
  </div>

  <!-- Conteúdo do card -->
  <div class="p-5 flex justify-between items-center">
    <a href="<%= property_path(property) %>"
       class="flex items-center gap-2 bg-indigo-600 text-white font-semibold px-4 py-2 rounded-full shadow hover:bg-indigo-700 transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Ver Detalhes
    </a>
  </div>
</div>
